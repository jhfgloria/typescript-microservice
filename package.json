{
  "name": "@wopa/web-server",
  "version": "0.4.0",
  "description": "wopa backend server",
  "author": "Joao Gloria <jhfgloria@gmail.com>",
  "scripts": {
    "test": "mocha -r ts-node/register './{,!(node_modules)/**/}*.test.ts'",
    "test:watch": "mocha --require ts-node/register --extension ts --watch-extensions ts --watch './{,!(node_modules)/**/}*.test.ts'",
    "start": "node dist/index.js",
    "develop:watch": "nodemon dist/index.js",
    "compile": "tsc",
    "compile:watch": "tsc && tsc --watch"
  },
  "_moduleAliases": {
    "configuration": "dist/configuration.js",
    "@lib": "dist/lib",
    "@web": "dist/web"
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.9.0",
    "@types/chai": "4.2.11",
    "@types/express": "4.17.2",
    "@types/mocha": "7.0.2",
    "@types/morgan": "1.9.0",
    "@types/pg": "7.14.1",
    "@types/sinon": "9.0.0",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "chai": "4.2.0",
    "eslint": "7.11.0",
    "mocha": "7.1.1",
    "nodemon": "2.0.3",
    "sinon": "9.0.2",
    "ts-node": "8.8.2",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "connect-pg-simple": "6.1.0",
    "db-migrate": "0.11.10",
    "db-migrate-pg": "1.0.0",
    "express": "4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "module-alias": "^2.2.2",
    "morgan": "1.10.0",
    "pg": "8.0.0"
  }
}
